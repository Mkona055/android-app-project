<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="80dp"
        android:layout_height="26dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/glbmlogo" />

    <TextView
        android:id="@+id/textViewFullName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="hisname"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="@+id/textViewWelcome"
        app:layout_constraintTop_toBottomOf="@+id/textViewWelcome" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="141dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/roundedlayout"
        android:text="Logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPhoneNumber" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:capitalize="none"
        android:fontFamily="sans-serif-medium"
        android:text="Welcome !"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="@color/NovigradBlue"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.141"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textViewConnectedAs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="You are connected as "
        android:textColor="@color/NovigradBlue"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/textViewFullName1"
        app:layout_constraintTop_toBottomOf="@+id/textViewFullName1" />

    <TextView
        android:id="@+id/textViewRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="role"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/textViewConnectedAs"
        app:layout_constraintTop_toBottomOf="@+id/textViewConnectedAs" />

    <View
        android:id="@+id/textViewPhoneNumber"
        android:layout_width="352dp"
        android:layout_height="202dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/roundedlayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewRole" />

    <TextView
        android:id="@+id/textViewBranchNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Branch Number"
        android:textColor="#454040"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/textViewBranchNumberNotToFill"
        app:layout_constraintTop_toBottomOf="@+id/textViewBranchAddress" />

    <TextView
        android:id="@+id/textViewBranchNumberNotToFill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="BranchNumber:"
        android:textColor="@color/NovigradBlue"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/textViewPhoneNumberNotToFill"
        app:layout_constraintTop_toBottomOf="@+id/textViewPhoneNumberNotToFill" />

    <TextView
        android:id="@+id/textViewBranchAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Branch Address"
        android:textColor="#454040"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/textViewBranchAddressNotToFill"
        app:layout_constraintTop_toBottomOf="@+id/textViewPhoneNumbertoFill" />

    <TextView
        android:id="@+id/textViewBranchAddressNotToFill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="BranchAddress:"
        android:textColor="@color/NovigradBlue"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/textViewPhoneNumberNotToFill"
        app:layout_constraintTop_toBottomOf="@+id/textViewPhoneNumberNotToFill" />

    <TextView
        android:id="@+id/textViewPhoneNumbertoFill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textColor="#454040"
        app:layout_constraintStart_toEndOf="@+id/textViewPhoneNumberNotToFill"
        app:layout_constraintTop_toTopOf="@+id/textViewPhoneNumberNotToFill" />

    <TextView
        android:id="@+id/textViewEmailToFill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="#454040"
        app:layout_constraintStart_toEndOf="@+id/textViewEmailnotToFill"
        app:layout_constraintTop_toTopOf="@+id/textViewEmailnotToFill" />

    <TextView
        android:id="@+id/textViewEmailnotToFill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Email: "
        android:textColor="@color/NovigradBlue"
        app:layout_constraintStart_toStartOf="@+id/textViewName"
        app:layout_constraintTop_toBottomOf="@+id/textViewName" />

    <TextView
        android:id="@+id/textViewFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="192dp"
        android:text="User Full Name"
        android:textColor="#454040"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewPhoneNumber"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textViewName"
        app:layout_constraintTop_toTopOf="@+id/textViewName" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Full Name:  "
        android:textColor="@color/NovigradBlue"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textViewPhoneNumber"
        app:layout_constraintTop_toBottomOf="@+id/textViewPersonalnformations" />

    <TextView
        android:id="@+id/textViewPersonalnformations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Profile Informations"
        android:textColor="@color/NovigradBlue"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewPhoneNumber"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/textViewPhoneNumber"
        app:layout_constraintTop_toTopOf="@+id/textViewPhoneNumber" />

    <TextView
        android:id="@+id/textViewPhoneNumberNotToFill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Phone Number: "
        android:textColor="@color/NovigradBlue"
        app:layout_constraintStart_toStartOf="@+id/textViewEmailnotToFill"
        app:layout_constraintTop_toBottomOf="@+id/textViewEmailnotToFill" />

</androidx.constraintlayout.widget.ConstraintLayout>