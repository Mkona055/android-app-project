<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/roundedlayout"
    app:cardCornerRadius="5dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/textViewFullName3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="User Full Name"
            android:textColor="#454040"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/textViewEmail3"
            app:layout_constraintTop_toBottomOf="@+id/textViewEmail3" />

        <TextView
            android:id="@+id/textViewEmail3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:text="Email"
            android:textColor="#454040"
            app:layout_constraintStart_toEndOf="@+id/textViewPhoneNumberLabel"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewPhoneNumber3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PhoneNumber"
            app:layout_constraintStart_toStartOf="@+id/textViewFullName3"
            app:layout_constraintTop_toBottomOf="@+id/textViewFullName3" />

        <TextView
            android:id="@+id/textViewRole3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Role"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textViewPhoneNumber3"
            app:layout_constraintTop_toBottomOf="@+id/textViewPhoneNumber3" />

        <TextView
            android:id="@+id/textViewEmailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Email: "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewEmail3" />

        <TextView
            android:id="@+id/textViewFullNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name: "
            app:layout_constraintStart_toStartOf="@+id/textViewEmailLabel"
            app:layout_constraintTop_toBottomOf="@+id/textViewEmailLabel" />

        <TextView
            android:id="@+id/textViewPhoneNumberLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number: "
            app:layout_constraintStart_toStartOf="@+id/textViewFullNameLabel"
            app:layout_constraintTop_toBottomOf="@+id/textViewFullNameLabel" />

        <TextView
            android:id="@+id/textViewRoleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Role: "
            app:layout_constraintStart_toStartOf="@+id/textViewPhoneNumberLabel"
            app:layout_constraintTop_toBottomOf="@+id/textViewPhoneNumberLabel" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>