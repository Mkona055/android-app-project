<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".ManageService">

    <Button
        android:id="@+id/buttonAddServices"
        android:layout_width="117dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="246dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="84dp"
        android:background="@drawable/roundedlayout"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewManageServices"
        android:layout_width="322dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="106dp"
        android:layout_marginEnd="38dp"
        android:text="Manage Services"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/NovigradBlue" />

    <ListView
        android:id="@+id/ListViewServices"
        android:layout_width="275dp"
        android:layout_height="410dp"
        android:layout_above="@+id/buttonAddServices"
        android:layout_below="@+id/textViewManageServices"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="67dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/roundedlayout" />

</RelativeLayout>